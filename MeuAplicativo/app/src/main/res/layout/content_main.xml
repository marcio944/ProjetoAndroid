<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView_Dados"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/imageButton_Dados"
            android:layout_alignTop="@+id/textView_Introdução"
            android:text="Tipo de Dados"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/imageButton_Dados"
            android:layout_width="145dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageButton_Introducao"
            android:layout_marginEnd="32dp"
            android:background="@null"
            android:onClick="exibirDados"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dados" />

        <ImageButton
            android:id="@+id/imageButton_Introducao"
            android:layout_width="145dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="38dp"
            android:background="@null"
            android:onClick="exibirIntroducao"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/introducao" />

        <TextView
            android:id="@+id/textView_Introdução"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageButton_Introducao"
            android:layout_marginTop="181dp"
            android:text="Introdução"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/imageButton_Controle"
            android:layout_width="145dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton_Introducao"
            android:layout_marginBottom="205dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/condicional" />

        <TextView
            android:id="@+id/textView_Controle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton_Introducao"
            android:layout_marginBottom="175dp"
            android:text="Estruturas de Controle"
            android:textSize="15dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>