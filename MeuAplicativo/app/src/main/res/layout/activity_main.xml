<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton_Introducao"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/introducao" />

        <ImageButton
            android:id="@+id/imageButton_Dados"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageButton_Introducao"
            android:layout_marginEnd="31dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dados" />

        <TextView
            android:id="@+id/textView_Introducao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="192dp"
            android:text="Introdução" />

        <TextView
            android:id="@+id/textViewDados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView_Introducao"
            android:layout_marginEnd="14dp"
            android:text="Representaação de Dados" />

        <ImageButton
            android:id="@+id/imageButton_Expressoes"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageButton_Introducao"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/operadores_aritmeticos"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="302dp" />

        <TextView
            android:id="@+id/textView_Expressoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_Introducao"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="201dp"
            android:text="Expressões" />

        <ImageButton
            android:id="@+id/imageButton_Condicao"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageButton_Dados"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/condicional" />

        <TextView
            android:id="@+id/textView_Condicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView_Expressoes"
            android:layout_marginEnd="24dp"
            android:text="Estruturas de Condição" />

        <ImageButton
            android:id="@+id/imageButton_Repeticao"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton_Introducao"
            android:layout_marginBottom="48dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/repeticao" />

        <TextView
            android:id="@+id/textView_Repeticao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="11dp"
            android:text="Estruturas de Repetição" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>